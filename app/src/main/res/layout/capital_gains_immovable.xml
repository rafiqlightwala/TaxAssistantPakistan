<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/headerview"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="center"
        android:background="@color/ColorPrimaryDark"
        android:textColor="@color/ColorWhite"
        android:text="ENTER VALUES"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:paddingLeft="8dp"
        android:text="For the current tax year, please enter your net capital gains from immovable property, where holding period(s) are as below" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="8dp"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/label1"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:text="Less than 1 year"
            android:gravity="left|center_vertical"
            android:layout_gravity="bottom"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input1"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="bottom"
            android:textSize="16sp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="8dp"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/label2"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:text="Between 1 to 2 years"
            android:gravity="left|center_vertical"
            android:layout_gravity="bottom"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input2"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="bottom"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="8dp"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/label3"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:text="More than 2 years"
            android:gravity="left|center_vertical"
            android:layout_gravity="bottom"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input3"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="bottom"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>