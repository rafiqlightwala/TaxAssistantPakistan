<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/main_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="@string/main_page_text"
            android:textColor="@color/ColorPrimaryDark"
            android:textSize="15sp"
            android:layout_alignParentStart="false"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_page_text"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"
            android:background="@color/ColorAccent"
            android:elevation="2dp"
            android:src="@drawable/salaried_option"
            android:translationZ="2dp"
            android:focusable="true"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"
            android:background="@color/ColorAccent"
            android:clickable="true"
            android:elevation="2dp"
            android:src="@drawable/other_option"
            android:translationZ="2dp"
            android:focusable="true"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:clickable="true"
            android:background="@color/ColorAccent"
            android:src="@drawable/business_option"
            android:adjustViewBounds="true"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:focusable="true"
            android:onClick="onClick" />

    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_mainpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
